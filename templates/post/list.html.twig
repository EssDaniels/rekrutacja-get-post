{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="my-6">Lista postów</h1>

	<table class="table-auto border-collapse border border-slate-500 rounded-md">
		<thead>
			<tr>
				<th class="border border-slate-600  p-5 ">Tytuł</th>
				<th class="border border-slate-600  p-5 ">Autor</th>
				{% if app.user %}
				<th class="border border-slate-600  p-5 ">Akcje</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<td class="border border-slate-700 p-5">{{ post.title }}</td>
					<td class="border border-slate-700 p-5">{{ post.authorName }}</td>
					<td class="border border-slate-700 p-5">
						<a href="{{ path('post_delete', {'id': post.id}) }}" class="rounded-md  px-6 py-2 bg-violet-500 hover:bg-violet-600 active:bg-violet-700 focus:outline-none focus:ring focus:ring-violet-300">Usuń</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
